generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Livro {
  id           Int       @id @default(autoincrement())
  titulo       String
  autor        String
  professor    String
  codigo_magico String    @unique
  criadoEm     DateTime  @default(now())
  paginas      Pagina[]
}

model Pagina {
  id            Int      @id @default(autoincrement())
  numero_pagina Int
  texto         String
  imagem_url    String
  livro         Livro    @relation(fields: [livro_id], references: [id])
  livro_id      Int
}

